<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/rlMainHeader"
            android:background="@color/colorHeader">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/rlHeader">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/menu_icon"
                    android:id="@+id/imgMenu"
                    android:adjustViewBounds="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorWhite"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="bold"
                    android:text="Innovation Summit"
                    android:id="@+id/textView2" />

            </RelativeLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rlMainHeader"
            android:id="@+id/rlContent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:padding="10dp"
                android:id="@+id/rlLogosContainer">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/rlCenterLine">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@mipmap/app_logo_icon"
                        android:adjustViewBounds="true"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:id="@+id/rlCenterLine"
                    android:background="#464646"
                    android:layout_centerHorizontal="true">
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/rlCenterLine">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@mipmap/app_logo1_icon"
                        android:layout_centerHorizontal="true"
                        android:adjustViewBounds="true"/>

                </RelativeLayout>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:padding="10dp"
                android:layout_below="@+id/rlLogosContainer"
                android:id="@+id/rlRowContainer">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/rlAgenda"
                    android:layout_marginLeft="25dp"
                    android:layout_toLeftOf="@+id/rlCenterLine1">
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@mipmap/agenda_green_icon"
                        android:adjustViewBounds="true"
                        android:id="@+id/imgAgenda"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_below="@+id/imgAgenda"
                        android:text="Agenda"
                        android:layout_centerHorizontal="true"
                        android:textColor="#414042"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/rlCenterLine1"
                    android:layout_centerHorizontal="true">
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/rlSpeakerBios"
                    android:layout_marginRight="25dp"
                    android:layout_toRightOf="@+id/rlCenterLine1">
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@mipmap/speaker_bios_green_icon"
                        android:adjustViewBounds="true"
                        android:id="@+id/imgSpeaker"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_below="@+id/imgSpeaker"
                        android:text="Speaker Bios"
                        android:layout_centerHorizontal="true"
                        android:textColor="#414042"/>
                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:padding="10dp"
                android:layout_below="@+id/rlRowContainer"
                android:id="@+id/rlRow1Container">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/rlExhibitor"
                    android:layout_marginLeft="25dp"
                    android:layout_toLeftOf="@+id/rlCenterLine2">
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@mipmap/exhibitor_green_icon"
                        android:adjustViewBounds="true"
                        android:id="@+id/imgExhibitor"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_below="@+id/imgExhibitor"
                        android:text="Exhibitor"
                        android:layout_centerHorizontal="true"
                        android:textColor="#414042"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/rlCenterLine2"
                    android:layout_centerHorizontal="true">
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/rlFloorPlan"
                    android:layout_marginRight="25dp"
                    android:layout_toRightOf="@+id/rlCenterLine2">
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@mipmap/floor_plan_green_icon"
                        android:adjustViewBounds="true"
                        android:id="@+id/imgFloorPlan"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_below="@+id/imgFloorPlan"
                        android:text="Floor Plan"
                        android:layout_centerHorizontal="true"
                        android:textColor="#414042"/>
                </RelativeLayout>


            </RelativeLayout>

        </RelativeLayout>


    </RelativeLayout>

    <fragment
        android:id="@+id/navigation_drawer"
        class ="com.fs.sha28.NavigationDrawerFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        tools:layout="@layout/fragment_navigation_drawer" />

</android.support.v4.widget.DrawerLayout>